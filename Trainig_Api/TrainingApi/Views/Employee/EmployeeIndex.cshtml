@model IEnumerable<TrainingApi.Models.EmployeeModel>

@{
    ViewData["Title"] = "Employee page";
    string[] tableHaeders = new string[] { "Id", "First Name", "Last Name", "Age", "Email" };
}

<h1>@ViewData["Title"]</h1>

<h4>Employee Table</h4>
<hr />
<div class="container">
   <div class="table">
       <table class="table table-bordered table-hover">
           <thead>
               <tr>
                   @foreach (var h in tableHaeders)
                   {
                       <th>@h</th>
                   }
               </tr>
           </thead>
           <tbody>
               @foreach (var empl in Model)
               {
                   <tr>
                       <td>@empl.EmployeeId</td>
                       <td>@empl.FirstName</td>
                       <td>@empl.LastName</td>
                       <td>@empl.Age</td>
                       <td>@empl.EmailAdress</td>
                   </tr>
               }
           </tbody>
       </table>
   </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

