@model RegisterViewModel
@{
    Layout = "_Layout";
}
<body>
    <h1 class="text-center">Register page</h1>
    <div class="row justify-content-center">
        <form class="p-3 border border-dark rounded" asp-controller="Auth" asp-action="Register" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label>Username</label>
                <input class="form-control" placeholder="Enter login" asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <label>Confirm password</label>
                <input class="form-control" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
    </div>
    <div class="row justify-content-center">
        <a asp-controller="Auth" asp-action="Login"
           asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
    </div>

</body>